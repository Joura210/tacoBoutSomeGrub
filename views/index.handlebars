<div class="container">






    <h1 class="text-center">Locos for Tacos!</h1>
    <img src="/assets/img/tastyTaco.jpg" class="tacoPic">
    <hr>

    <div class="row">
        <div class="col-sm-6">


            <h2>Tacos for Consumption!</h2>

            <ul>
                {{#each tacos}}
                {{#unless tasted}}
                    {{!-- {{> tacos/tacos-block tasted=false}} --}}
                {{/unless}}
                {{/each}}
            </ul>
            {{!-- close taco consumption column --}}
        </div>

        <div class="col-sm-6">
            <h2>Tacos That have been Consumed!</h2>

            <ul>
                {{#each tacos}}
                    {{#if tasted}}
                        {{!-- {{> tacos/tacos-block tasted=true}} --}}
                    {{/if}}

                {{/each}}
            </ul>

            {{!-- closing devoured taco column --}}
        </div>
        {{!-- closing taco row --}}
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Create a Taco</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="taco">Type:</label>
                    <input type="text" id="newTaco" name="name">
                </div>



                <button type="submit">Add Taco</button>
            </form>
            {{!-- close taco for column --}}
        </div>
        {{!-- close taco form row --}}
    </div>
    {{!-- end of main container --}}
</div>